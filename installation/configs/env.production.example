# MediaFlow v2.1 - Production Environment
# Copiar a: /var/www/mediaflow/backend/.env
# IMPORTANTE: Cambiar todos los valores marcados con TU_*

# ===================
# General
# ===================
APP_NAME=MediaFlow
APP_VERSION=2.1.0
APP_ENV=production
DEBUG=False

# ===================
# Server
# ===================
HOST=0.0.0.0
PORT=3001

# ===================
# Database (PostgreSQL)
# ===================
DATABASE_URL=postgresql+asyncpg://mediaflow:TU_PASSWORD_DB@localhost:5432/mediaflow
DB_ECHO=False

# ===================
# API Keys (REQUERIDAS)
# ===================
ELEVENLABS_API_KEY=TU_ELEVENLABS_KEY
ANTHROPIC_API_KEY=TU_ANTHROPIC_KEY

# ElevenLabs settings
ELEVENLABS_MODEL_ID=eleven_multilingual_v2
ELEVENLABS_BASE_URL=https://api.elevenlabs.io/v1

# Claude AI settings
# Modelos validos: claude-sonnet-4-20250514, claude-3-5-sonnet-latest
CLAUDE_MODEL=claude-sonnet-4-20250514

# ===================
# Storage
# ===================
STORAGE_PATH=/var/www/mediaflow/storage
AUDIO_PATH=/var/www/mediaflow/storage/audio
MUSIC_PATH=/var/www/mediaflow/storage/music
SOUNDS_PATH=/var/www/mediaflow/storage/sounds
TEMP_PATH=/var/www/mediaflow/storage/temp
MAX_UPLOAD_SIZE=52428800

# ===================
# CORS
# ===================
CORS_ORIGINS=["https://TU_DOMINIO","http://TU_DOMINIO"]

# ===================
# Security
# ===================
# Generar con: openssl rand -hex 32
SECRET_KEY=TU_SECRET_KEY_GENERADA
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===================
# Audio Processing
# ===================
DEFAULT_TARGET_LUFS=-16.0
DEFAULT_SAMPLE_RATE=44100
DEFAULT_BITRATE=192k

# ===================
# Redis (opcional)
# ===================
REDIS_URL=redis://localhost:6379/0

# ===================
# Tenant Configuration
# ===================
TENANT_ID=TU_TENANT_ID
TENANT_NAME=TU_NOMBRE_EMPRESA
TENANT_LOGO=/images/mediaflow-logo.png
TENANT_PRIMARY_COLOR=#4F46E5
TENANT_SECONDARY_COLOR=#7C3AED
TENANT_DOMAIN=TU_DOMINIO
TENANT_FAVICON=/favicon.ico

# ===================
# WebSocket (opcional)
# ===================
WS_HEARTBEAT_INTERVAL=30
WS_RECONNECT_INTERVAL=3

# ===================
# Player Integration (opcional)
# ===================
PLAYER_POLLING_INTERVAL=2
PLAYER_WEBSOCKET_URL=ws://localhost:3001/ws/player
